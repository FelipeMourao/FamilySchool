<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/black"
    app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Adicionar Professor"
        android:textColor="@color/accent"
        android:textSize="@dimen/title_dialog" />

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CÃ³digo da Turma"
        android:textColor="@color/accent"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCodigo"
        android:layout_alignStart="@+id/tvCodigo"
        android:layout_below="@+id/tvCodigo"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:background="@color/base"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/accent"
        android:layout_below="@+id/etCodigo"
        android:layout_alignLeft="@+id/etCodigo"
        android:layout_alignStart="@+id/etCodigo"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail"
        android:layout_below="@+id/tvEmail"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:background="@color/base"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/accent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:paddingTop="4dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirmar" />

        <Button
            android:id="@+id/btn_Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar" />
    </LinearLayout>
</RelativeLayout>